extends ./baseof.pug

block main 
	main.items-center.m-0.mx-auto.max-w-none
		.px-12.mx-auto.max-w-4xl.prose.prose-sm.lead-3.prose-blockquote
			h1.my-4 #{ title }
			#page_content.w-full
				h1.mb-0=name
				if buttons
					.inline-block.my-2
						each button in buttons 
							if button.url 
								a.px-1.px-2.mr-1.min-w-0.text-xs.text-black.bg-neutral-300.rounded-xs(style="padding: 0.375rem 0.375rem 0.5rem 0.5rem; white-space: nowrap;" href=button.url)
									span.mr-2.w-4.h-4.text-black.align-middle.bg-center.bg-no-repeat(class=button.class)
									= button.tag
							else 
								span.px-1.px-2.mr-1.min-w-0.text-xs.text-black.bg-neutral-300.rounded-xs(style="padding: 0.375rem 0.375rem 0.5rem 0.5rem; white-space: nowrap;" href=button.url)
									= button.text
				!= content 
				br

