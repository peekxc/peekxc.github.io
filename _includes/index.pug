extends ./baseof.pug

block main 
	main.container.items-center.max-w-none.m-0.mx-auto
		.prose.prose-sm.lead-3.prose-blockquote.max-w-4xl.px-12.mx-auto
			h1.my-4 #{ title }
			#page_content.w-full
				img.ml-2.float-right(src=profile_img class="rounded-lg object-cover md:visible .hidden show-on-md-screen" loading="lazy" style="max-width: 16rem; width: 16rem; height: 16rem;" alt=profile_alt)
				h1.mb-0=name
				if buttons
					.my-2.inline-block
						each button in buttons 
							if button.url 
								a.bg-neutral-300.text-black.text-xs.px-1.rounded-xs.mr-1.min-w-0.px-2(style="padding: 0.375rem 0.375rem 0.5rem 0.5rem; white-space: nowrap;" href=button.url)
									span.align-middle.bg-no-repeat.bg-center.text-black.h-4.w-4.mr-2.text-black(class=button.class)
									= button.tag
							else 
								span.bg-neutral-300.text-black.text-xs.px-1.rounded-xs.mr-1.min-w-0.px-2(style="padding: 0.375rem 0.375rem 0.5rem 0.5rem; white-space: nowrap;" href=button.url)
									= button.text
									
				!= content 
				br

			
				//- != filters.image("/resources/profile_pic_white-min.jpg", "profile_pic")
				//- - console.log(filters)

