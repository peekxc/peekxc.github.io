//- Variables: 
.card.shadow-xs.bg-white.leading-5.border-2(class="hover:border-gray-500")
	.cursor-context-menu.px-4.py-1.bg-neutral-200.m-0.bg-cover.bg-clip-border.bg-no-repeat.bg-right.bg-blend-overlay(style="background-image: url('" + filters.url(background_image) + "'); background-size: 60% !important;")
		.accordion-header.grid.grid-cols-8.gap-y-1.content-between
			h4.font-bold.col-span-3!= card_title
			h4.font-medium.col-span-5.justify-self-end!= card_subtitle
			//- h4.font-medium.col-span-3!= card_date
			//- h4.font-medium.col-span-5.justify-self-end!= card_extra
			.flex.justify-between.col-span-8
				.flex 
					h4.font-normal!= card_date
				.self-end 
					h4.font-normal!= card_extra
			hr.col-span-full(style="margin-bottom: 0.20rem;")
		.flex.justify-between.items-center.align-middle
			- var desc_defined = (typeof(card_desc) !== 'undefined')
			- var tags_defined = (typeof(card_tags) !== 'undefined') && (card_tags.length > 0)
			.flex
				if tags_defined
					each t in card_tags
						span.bg-neutral-300.text-black.text-xs.px-1.rounded-xs.mr-1.min-w-0(style="white-space: nowrap; padding-top: 0.15em !important; padding-bottom: 0.15em !important") #{ t }
				else if desc_defined
					span.text-ellipsis.bg-transparent.overflow-hidden.pr-2.pt-0.italic(class="truncate ...") #{ card_desc }
			.self-end.items-center.align-middle
				svg.stroke-3.h-4.w-4.mr-1.block.align-middle.justify-self-end(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor")
					path(stroke-linecap="round" stroke-linejoin="round" d="M9 12.75l3 3m0 0l3-3m-3 3v-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
				svg.stroke-3.h-4.w-4.mr-1.block.align-middle.hidden(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor")
					path(stroke-linecap="round" stroke-linejoin="round" d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
		p.w-full.text-ellipsis.bg-transparent.overflow-hidden.pr-2.pt-1.italic(class="truncate ...") #{ abstract }
	.accordion-body.p-2.overflow-auto.px-4.py-2.border-x-2.border-b-2.hidden
		!= content
