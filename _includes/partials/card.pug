//- Variables: 
.card.shadow-xs.bg-white.leading-5.max-w-3xl.border-3.border-transparent(style="hover:border-red-400")
	.cursor-pointer.px-4.py-2.bg-gray-200
		.bg-gray-200.bg-cover.bg-clip-border.bg-no-repeat.bg-right.bg-blend-overlay(style="background-image: url('" + filters.url(background_image) + "'); background-size: 50% !important;")
			.accordion-header.grid.grid-cols-8.gap-y-1.content-between
				h4.font-bold.col-span-3!= card_title
				h4.font-bold.col-span-5.justify-self-end #{ card_subtitle }
				h4.font-medium.col-span-3 #{ card_date }
				h4.font-medium.col-span-5.justify-self-end #{ card_extra }
				hr.col-span-full
			.flex.justify-between
				- var desc_defined = (typeof(card_desc) !== 'undefined')
				- var tags_defined = (typeof(card_tags) !== 'undefined') && (card_tags.length > 0)
				.flex
					if tags_defined
						each t in card_tags
							span.bg-gray-300.text-black.text-xs.py-1.px-1.rounded-xs.mr-1.min-w-0(style="white-space: nowrap") #{ t }
					else if desc_defined
						span.text-ellipsis.bg-gray-200.overflow-hidden.pr-2.pt-1.italic(class="truncate ...") #{ card_desc }
				.self-end
					svg.stroke-3.h-4.w-4.mr-1.inline-block.align-middle.justify-self-end(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor")
						path(stroke-linecap="round" stroke-linejoin="round" d="M9 12.75l3 3m0 0l3-3m-3 3v-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
					svg.stroke-3.h-4.w-4.mr-1.inline-block.align-middle.hidden(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor")
						path(stroke-linecap="round" stroke-linejoin="round" d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
		p.w-full.text-ellipsis.bg-gray-200.overflow-hidden.pr-2.pt-1.italic(class="truncate ...") #{ abstract }
	.accordion-body.p-2.overflow-auto.px-4.py-2.hidden.border-x-2.border-b-2
		!= content
