.card.shadow-xs.bg-white.leading-5.max-w-4xl
	.cursor-context-menu.border-2.px-4.py-2.bg-neutral-200.bg-cover.bg-clip-border.bg-no-repeat.bg-right.bg-blend-overlay(style="background-image: url('" + filters.url(background_image) + "'); background-size: 50% !important;" class="hover:border-slate-500")
		.accordion-header.grid.grid-cols-8.gap-y-1.content-between
			h4.font-bold.col-span-full.text-lg!= card_title
			//- h5.font-medium.col-span-full.italic #{ card_subtitle }
			hr.col-span-full
		.flex.justify-between
			.flex
				each t in card_tags
					span.bg-neutral-300.text-black.text-xs.py-1.px-1.rounded-xs.mr-1.min-w-0(style="white-space: nowrap") #{ t }
			.self-end
				svg.stroke-3.h-4.w-4.mr-1.align-middle.justify-self-end(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="col-span-"+(12-card_tags.length))
					path(stroke-linecap="round" stroke-linejoin="round" d="M9 12.75l3 3m0 0l3-3m-3 3v-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
				svg.stroke-3.h-4.w-4.mr-1.hidden(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor")
					path(stroke-linecap="round" stroke-linejoin="round" d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
		p.w-full.text-ellipsis.bg-transparent.overflow-hidden.pr-2.pt-1.italic.text-sm(class="line-clamp-2") #{ abstract }
	.accordion-body.card-body.border-x-2.border-b-2.hidden(data-index=index)
		//- - console.log(page)
		.grid.grid-cols-12.bg-white-100.justify-center.items-center.p-2
			.col-span-5.px-3.overflow-hidden.mx-auto
				img.rounded-sm.object-cover.max-h-64(loading="lazy" src=image)
			.col-span-7.flex.flex-col.px-3.overflow-y-scroll.text-center
				summary.prose-sm.leading-4.text-justify.max-h-64.inline #{ abstract_full }
		.p-2.overflow-auto.px-4.py-2.space-y-1
			!= content

