extends ./baseof.pug

block main 
	.container.flex.flex-col.mx-auto.space-y-4.py-2.px-40.border-2
		//- #page_content.w-full 
		//- != content 

		.flex.flex-col.space-y-1.border-sm.p-2.mx-auto.w-full
			h2.font-bold.text-yellow-400.text-xl Projects
			each project in projects
				include partials/project_card

		.flex.flex-col.space-y-1.border-sm.p-2.mx-auto.w-full
			h2.font-bold.text-red.text-xl Employment
			ol.relative.ml-3.border-l.border-red-400
				each job in jobs
					.flex-start.flex.items-center.pt-1
						.absolute.w-4.h-4.bg-red-400.rounded-full.border.border-white(class='-left-2') 
						li.ml-3.w-full
							include partials/job_card
		
		.flex.flex-col.space-y-1.border-sm.p-2.mx-auto.w-full
			h2.font-bold.text-orange.text-xl Education
			ol.relative.ml-3.border-l.border-orange-400
				each uni in schools
					.flex-start.flex.items-center.pt-2
						.absolute.w-4.h-4.bg-orange-400.rounded-full.border.border-white(class='-left-2')
						li.ml-3.w-full
							include partials/edu_card
